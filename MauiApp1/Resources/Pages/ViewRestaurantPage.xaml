<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Resources.Pages.ViewRestaurantPage"
             Title="ViewRestaurantPage">
    <StackLayout>
        <Image x:Name="RestaurantImage"/>
        
        <Label x:Name="RestaurantNameLabel" />
        
        <Label x:Name="AddressLabel" />
        
        <Label x:Name="RatingLabel" />
        
        <Label x:Name="MemoriesLabel" />
        
        <Button Text="Delete" Clicked="OnDeleteButtonClicked"/>
        
        <Button Text="Share" Clicked="OnShareButtonClicked"/>
        
        <Button Text="Map" Clicked="OnMapButtonClicked"/>
        
    </StackLayout>
</ContentPage>