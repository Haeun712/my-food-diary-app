<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Resources.Pages.RestaurantListPage"
             Title="RestaurantListPage">
    <StackLayout>
        <Button Text="Add Restaurant" 
                VerticalOptions="Start" 
                HorizontalOptions="End"
                FontAttributes="Bold"
                Margin="5"
                Clicked="OnAddRestaurantButtonClicked"/>

        <ListView 
            x:Name="RecipesListView"
            SelectionMode="None"
            ItemTapped="Restaurant_Tapped"
            ItemsSource="{Binding Restaurants}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Border
                        Margin="10,5,10,5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Grid
                            Padding="10,6,10,6"
                            ColumnSpacing="10"
                            HeightRequest="80">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                   
                                    <Label
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Grid.Row="0"
                                        FontSize="16"
                                        VerticalOptions="Center"
                                        Text="{Binding Name}"
                                        FontAttributes="Bold"/>
                                <Label
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        VerticalOptions="Center"
                                        FontAttributes="Bold">
                                    <Label.Text>
                                        <Binding Path="Rate" StringFormat="{}{0}/5"/>
                                    </Label.Text>
                                </Label>
                                    <Label
                                        Grid.ColumnSpan="3"
                                        Grid.Column="0"
                                        HeightRequest="40"
                                        FontSize="14"
                                        Grid.Row="1"
                                        HorizontalOptions="FillAndExpand"
                                        Text="{Binding Memories}"
                                        VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
        <!-- Bottom Navigation Buttons -->
        <StackLayout Orientation="Horizontal"
             VerticalOptions="End"
             HorizontalOptions="FillAndExpand"
             BackgroundColor="LightGray">

            <Button Text="My Recipes"
                    HorizontalOptions="FillAndExpand"
                    Clicked="OnMyRecipesButtonClicked"
                    FontAttributes="Bold"
                    FontSize="12"
                    CornerRadius="0"
                    BorderWidth="0.75"
                    BorderColor="#E2863F"/>       

            <Button Text="My Restaurants"
                    HorizontalOptions="FillAndExpand"
                    Clicked="OnMyRestaurantsButtonClicked"
                    FontAttributes="Bold"
                    FontSize="12"
                    CornerRadius="0"
                    BorderWidth="0.75"
                    BorderColor="#E2863F"/>
        </StackLayout>
    </StackLayout>
</ContentPage>