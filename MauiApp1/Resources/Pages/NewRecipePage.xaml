<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Resources.Pages.NewRecipePage"
             Title="NewRecipePage">
    <StackLayout>
        <Entry Placeholder="Name" x:Name="RecipeNameEntry"/>
        
        <Editor Placeholder="Ingredients" x:Name="IngredientsEditor"/>
        
        <Editor Placeholder="Steps" x:Name="StepsEditor"/>

        <Image x:Name="RecipeImage" HeightRequest="200" WidthRequest="200" Aspect="AspectFill" IsVisible="False"/>

        <Button Text="Add Photo" Clicked="OnAddPhotoButtonClicked"/>
        
        <Button Text="Save" Clicked="OnSaveButtonClicked"/>
    </StackLayout>
</ContentPage>