<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Resources.Pages.ViewRecipePage"
             Title="ViewRecipePage">
    <StackLayout>
        <Image x:Name="RecipeImage"/>
        
        <Label x:Name="RecipeNameLabel" />
        
        <Label x:Name="IngredientsLabel" />
        
        <Label x:Name="StepsLabel" />
        
        <Button Text="Delete" Clicked="OnDeleteButtonClicked"/>
        
        <Button Text="Share" Clicked="OnShareButtonClicked"/>
        
    </StackLayout>
</ContentPage>